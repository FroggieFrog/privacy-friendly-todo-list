<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >

    <View
        android:id="@+id/v_subtask_deadline_color_bar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <CheckBox
        android:id="@+id/cb_subtask_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:scaleX="0.80"
        android:scaleY="0.80" />

    <TextView
        android:id="@+id/tv_subtask_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/bt_subtask_move_up"
        style="@style/BorderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:visibility="gone"
        android:contentDescription="@string/move_up"
        app:srcCompat="@drawable/ic_arrow_up_black_24dp" />

    <ImageButton
        android:id="@+id/bt_subtask_move_down"
        style="@style/BorderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:visibility="gone"
        android:contentDescription="@string/move_down"
        app:srcCompat="@drawable/ic_arrow_down_black_24dp" />

</LinearLayout>
